<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fall2018.csc2017.slidingtiles">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".slidinggames.view.StartingActivity" />
        <!-- <intent-filter> -->
        <!-- <action android:name="android.intent.action.MAIN" /> -->


        <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
        <!-- </intent-filter> -->
        <!-- </activity> -->

        <activity android:name=".slidinggames.view.GameActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".GameCenterActivity" />
        <activity android:name=".slidinggames.view.ScoreBoardActivity" />
        <activity android:name=".slidinggames.view.TileSettingsActivity" />
        <activity android:name=".slidinggames.view.PersonalScoreBoardActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".slidinggames.view.FinalScoreActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".tfgames.view.StartingActivityTF" />
        <activity android:name=".tfgames.view.GameActivityTF" />
        <activity android:name=".sudokugames.view.GameActivitySudoku" />
        <activity android:name=".sudokugames.view.StartingActivitySudoku" />
        <activity android:name=".tfgames.view.FinalScoreTFActivity" />
        <activity android:name=".tfgames.view.YouLoseTFActivity" />
        <activity android:name=".sudokugames.view.FinalScoreSKActivity" />
        <activity
            android:name=".BasicScoreBoardActivity"
            android:label="@string/title_activity_basic_score_board"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".tfgames.view.ScoreboardtfActivity"
            android:label="@string/title_activity_scoreboardtf"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>
    </application>

</manifest>